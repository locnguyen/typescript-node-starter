{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "~/*": ["./*"]
        },
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": ["es6"],
        "outDir": "build"
    },
    "compileOnSave": true,
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.test.ts"
    ]
}
