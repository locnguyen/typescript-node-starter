{
  "name": "typescript-node-starter",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf build",
    "dev": "NODE_ENV=development nodemon --exec ./node_modules/.bin/ts-node -r tsconfig-paths/register -- ./src/index.ts",
    "lint": "./node_modules/.bin/tslint -c \"tslint.json\" -e \"node_modules/**/*\"  \"./src/**/*.ts*\"",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "prettier": "prettier  \"./src/**/*.ts\"",
    "prettier:check": "npm run prettier -- --list-different",
    "prettier:write": "npm run prettier -- --write",
    "report": "nyc npm run test",
    "test": "NODE_ENV=test ./node_modules/.bin/mocha --require ts-node/register -r tsconfig-paths/register src/**/*.test.ts"
  },
  "precommit": [
    "precommit-msg",
    "prettier:check",
    "lint"
  ],
  "prettier": {
    "parser": "typescript",
    "tabWidth": 4,
    "printWidth": 120,
    "singleQuote": true,
    "semi": true
  },
  "author": "Loc Nguyen, lochnguyen@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.0",
    "@types/sinon": "^5.0.1",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "nyc": "^12.0.2",
    "pre-commit": "^1.2.2",
    "prettier": "^1.14.0",
    "rimraf": "^2.6.2",
    "sinon": "^6.1.4",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-microsoft-contrib": "^5.1.0",
    "typescript": "^3.0.1"
  },
  "repository": "https://locnguyen@github.com/locnguyen/typescript-node-starter",
  "dependencies": {
    "dotenv": "^6.0.0",
    "tsconfig-paths": "^3.3.2"
  }
}
