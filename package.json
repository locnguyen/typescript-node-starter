{
  "name": "typescript-node-starter",
  "version": "1.1.1",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf build",
    "dev": "NODE_ENV=development nodemon --exec ./node_modules/.bin/ts-node -r tsconfig-paths/register -- ./src/index.ts",
    "lint": "./node_modules/.bin/tslint -c \"tslint.json\" -e \"node_modules/**/*\"  \"./src/**/*.ts*\"",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "prettier": "prettier  \"./src/**/*.ts\"",
    "prettier:check": "npm run prettier -- --list-different",
    "prettier:write": "npm run prettier -- --write",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "precommit": [
    "precommit-msg",
    "prettier:check",
    "lint"
  ],
  "prettier": {
    "parser": "typescript",
    "tabWidth": 4,
    "printWidth": 120,
    "singleQuote": true,
    "semi": true
  },
  "author": "Loc Nguyen, lochnguyen@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.11.2",
    "cross-env": "^5.2.0",
    "jest": "^24.1.0",
    "nodemon": "^1.18.3",
    "pre-commit": "^1.2.2",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-microsoft-contrib": "^6.0.0",
    "typescript": "^3.2.4"
  },
  "repository": "https://locnguyen@github.com/locnguyen/typescript-node-starter",
  "dependencies": {
    "dotenv": "^6.2.0",
    "tsconfig-paths": "^3.7.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(src)/.*\\.test\\.(jsx?|tsx?)$",
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "~/([^\\.]*)$": "<rootDir>/src/$1"
    }
  }
}
